name: Daily Predictions Update

on:
  schedule:
    # Run every day at 6 AM UTC (2 AM EST)
    - cron: '0 6 * * *'
  workflow_dispatch: # Allow manual trigger

jobs:
  update-predictions:
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout repository
      uses: actions/checkout@v3
      
    - name: Setup Node.js
      uses: actions/setup-node@v3
      with:
        node-version: '18'
        
    - name: Install dependencies
      run: |
        npm install node-fetch
        npm install fs-extra
        
    - name: Fetch daily predictions
      env:
        BDL_API_KEY: ${{ secrets.BDL_API_KEY }}
      run: node scripts/fetch-predictions.js
      
    - name: Update prediction data
      run: |
        git config --local user.email "action@github.com"
        git config --local user.name "GitHub Action"
        git add data/
        git diff --staged --quiet || git commit -m "Daily predictions update - $(date +%Y-%m-%d)"
        
    - name: Push changes
      uses: ad-m/github-push-action@master
      with:
        github_token: ${{ secrets.GITHUB_TOKEN }}
        branch: main
